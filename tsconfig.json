{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES2020"],
		"types": ["vitest/globals"],
		"outDir": "./dist",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
